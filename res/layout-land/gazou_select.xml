<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/LinearLayout2"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:background="@drawable/haikei1"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.poka.MainActivity" >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="320dp"
        android:orientation="vertical" >

        <RelativeLayout
            android:id="@+id/photoIndex"
            android:layout_width="291dp"
            android:layout_height="258dp"
            android:layout_weight="0.90" >

            <FrameLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="24dp" >

                <TextView
                    android:id="@+id/pageIdx"
                    android:layout_width="wrap_content"
                    android:layout_height="47dp"
                    android:layout_weight="0.00"
                    android:ems="10"
                    android:height="10dp"
                    android:textSize="20sp"
                    android:width="80dp" />

            </FrameLayout>

            <ImageView
                android:id="@+id/pageView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true"
                android:src="@drawable/ic_launcher" />

        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical" >

        <RelativeLayout
            android:layout_width="400dp"
            android:layout_height="272dp" >

            <ImageButton
                android:id="@+id/imageButton1"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_marginTop="34dp"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/syasinsentaku_1" />

            <ImageButton
                android:id="@+id/imageButtonKettei"
                android:layout_width="270px"
                android:layout_height="80px"
                android:layout_above="@+id/ImageButton01"
                android:layout_alignParentLeft="true"
                android:layout_marginBottom="18dp"
                android:layout_weight="2.44"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/kettei" />

            <ImageButton
                android:id="@+id/ImageButton01"
                android:layout_width="270px"
                android:layout_height="80px"
                android:layout_alignParentBottom="true"
                android:layout_alignParentLeft="true"
                android:layout_weight="2.44"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/owari_1" />

            <ImageButton
                android:id="@+id/imageButton4"
                android:layout_width="160dp"
                android:layout_height="60dp"
                android:layout_alignParentLeft="true"
                android:layout_centerVertical="true"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/camera_1" />

            <ImageButton
                android:id="@+id/imageButton3"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_alignTop="@+id/imageButton1"
                android:layout_toRightOf="@+id/imageButton1"
                android:layout_weight="0.01"
                android:background="@null"
                android:scaleType="fitXY"
                android:src="@drawable/tukuru_1" />

        </RelativeLayout>
    </LinearLayout>

</LinearLayout>